@model TrangChiTietViewModel
@*
    Layout = "~/Views/Shared/_layout.cshtml";
*@
@{
    ViewData["Title"] = "SingleProduct";
    ViewBag.Message = "Shop";
}
<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <!-- Search Products -->
                <div class="single-sidebar">
                    <h2 class="sidebar-title">Search Products</h2>
                    <form action="/Product/Search" method="get">
                        <input type="text" name="q" placeholder="Search products...">
                        <input type="submit" value="Search">
                    </form>
                </div>

                <!-- Recently Viewed Products -->
                @* Hiển thị danh sách sản phẩm gần đây mà người dùng đã xem *@
                <div class="single-sidebar">
                    <h2 class="sidebar-title">Recently Viewed</h2>
                    @foreach (var p in Model.RecentProducts)
                    {
                        <div class="thubmnail-recent">
                            <img src="@p.ThumbnailUrl" class="recent-thumb" alt="@p.ProductName">
                            <h2>
                                <a href="@Url.Action("Index", "SingleProduct", new { id = p.ProductID })">
                                    @p.ProductName
                                </a>
                            </h2>
                            <div class="product-sidebar-price">
                                <ins>@(p.PriceSale ?? p.Price)</ins>
                                @if (p.PriceSale != null && p.PriceSale < p.Price)
                                {
                                    <del>@p.Price</del>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Recent Posts -->
                @* Hiển thị danh sách bài viết gần đây *@
                <div class="single-sidebar">
                    <h2 class="sidebar-title">Recent Posts</h2>
                    <ul>
                        @foreach (var post in Model.RecentPosts)
                        {
                            <li>@post.Title</li>
                        }
                    </ul>
                </div>
            </div>

            <div class="col-md-8">
                <div class="product-content-right">
                    <div class="product-breadcroumb">
                        <a href="@Url.Action("Index", "Home")">Home</a> <!-- Nút Home: quay về trang chủ -->
                        <a href="">@Model.Product.CategoryName</a>
                        <a href="">@Model.Product.ProductName</a>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img src="@Model.Product.ThumbnailUrl" alt="@Model.Product.ProductName">
                                </div>

                                <div class="product-gallery">
                                    @* Hiển thị các hình ảnh phụ của sản phẩm *@
                                    @foreach (var img in Model.Product.Images)
                                    {
                                        <div class="gallery-item">
                                            <img src="@img.ImageUrl" alt="@Model.Product.ProductName">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="product-inner">
                                <h2 class="product-name">@Model.Product.ProductName</h2>   <!-- Tên sản phẩm -->
                                <div class="product-inner-price">
                                    <!-- Giá sản phẩm -->
                                    <ins>@((Model.Product.PriceSale ?? Model.Product.Price).ToString("N0")) VNĐ</ins>
                                    @if (Model.Product.PriceSale.HasValue && Model.Product.PriceSale < Model.Product.Price)
                                    {
                                        <del>@Model.Product.Price.ToString("N0") VNĐ</del>
                                    }
                                </div>

                                <form action="" class="cart">
                                    <div class="quantity">
                                        <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                    </div>
                                    <button class="add_to_cart_button" type="submit">Add to cart</button>
                                </form>

                                <div class="product-inner-category">
                                    <p>
                                        Category: <a href="">@Model.Product.CategoryName</a>. Tags:
                                        @foreach (var tag in Model.Product.Tags)
                                        {
                                            <a href="#">@tag.TagName</a>
                                            @(tag != Model.Product.Tags.Last() ? ", " : "")
                                        }
                                    </p>
                                </div>

                                <div role="tabpanel">
                                    <ul class="product-tab" role="tablist">
                                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Reviews</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                                            <h2>Product Description</h2>
                                            <p>@Model.Product.Description</p>
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="profile">
                                            <h2>Reviews</h2>
                                            <div class="submit-review">
                                                <p><label for="name">Name</label> <input name="name" type="text"></p>
                                                <p><label for="email">Email</label> <input name="email" type="email"></p>
                                                <div class="rating-chooser">
                                                    <p>Your rating</p>

                                                    <div class="rating-wrap-post">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                    </div>
                                                </div>
                                                <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                <p><input type="submit" value="Submit"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="related-products-wrapper">
                        <h2 class="related-products-title">Related Products</h2>
                        <div class="related-products-carousel">
                            @* Hiển thị các sản phẩm liên quan *@
                            @foreach (var related in Model.RelatedProducts)
                            {
                                <div class="single-product">
                                    <div class="product-f-image">
                                        <img src="@related.ThumbnailUrl" alt="@related.ProductName">
                                        <div class="product-hover">
                                            <a href="/Product/Details/@related.ProductID" class="add-to-cart-link">
                                                <i class="fa fa-shopping-cart"></i> Add to cart
                                            </a>
                                            <a href="/Product/Details/@related.ProductID" class="view-details-link">
                                                <i class="fa fa-link"></i> See details
                                            </a>
                                        </div>
                                    </div>
                                    <h2><a href="/Product/Details/@related.ProductID">@related.ProductName</a></h2>
                                    <div class="product-carousel-price">
                                        <ins>@(related.PriceSale ?? related.Price)</ins>
                                        @if (related.PriceSale != null && related.PriceSale < related.Price)
                                        {
                                            <del>@related.Price</del>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>